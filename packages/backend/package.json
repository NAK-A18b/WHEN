{
  "name": "when-backend",
  "version": "1.0.0",
  "description": "WHEN backend providing lambda functions and business logic",
  "main": "src/app/index.js",
  "scripts": {
    "invoke:app": "node build/app/index.js",
    "invoke:update-timetable": "sls invoke local --function updateTimetable",
    "invoke:check-timetable": "sls invoke local --function checkTimetable",
    "deploy": "sls deploy",
    "db:setup": "serverless dynamodb install",
    "db:drop": "rm -rf ./.dynamodb",
    "db:start": "serverless dynamodb start --seed=domain",
    "sls:offline": "sls offline --noTimeout"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "when-aws": "file:../aws",
    "when-whatsapp": "file:../whatsapp/functions"
  },
  "devDependencies": {
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-offline": "^5.11.0"
  }
}
